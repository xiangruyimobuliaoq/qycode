<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/bg_popwindow">

    <LinearLayout
        android:id="@+id/pop_anima"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@mipmap/bg_createroom"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/fanhui"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:layout_margin="8dp"
            android:src="@mipmap/guanbi"/>


        <LinearLayout
            android:id="@+id/pwdpart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="房间密码:"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/roompass"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:background="@mipmap/di"
                android:inputType="textPassword"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="16sp"/>
        </LinearLayout>

        <ImageButton
            android:id="@+id/createRoom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:background="@mipmap/btn_bg"
            android:src="@mipmap/btn_tijiao"/>

    </LinearLayout>
</RelativeLayout>